<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/triggers/new.css" />
  <%- include('../partials/nav') %>

    <main>
      <h1>
        <%= title %>
      </h1>
      <p>Please first ensure that the Trigger is not in the dropdown
        <select>
          <% profile.triggers.forEach(function(trigger) { %>
            <option>
              <%= trigger.name %>
            </option>
            <% }) %>
        </select>
      </p>
      <form id="add-trigger-form" action="/triggers" method="POST">
        <label for="name-input">Name:</label>
        <input type="text" name="name" id="name-input">
        <button type="submit">Add Trigger</button>
      </form>
    </main>

    <%- include('../partials/footer') %>