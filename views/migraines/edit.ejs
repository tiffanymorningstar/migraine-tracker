<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/migraines/new.css" />
  <%- include('../partials/nav') %>
    <main>
      <h1>
        <%= title %>
      </h1>
      <form id="new-form" action="/migraines/<%= migraine._id %>?_method=PUT" method="POST">

        <label for="date-input">Date:</label>
        <input type="datetime-local" value="<%= migraine.date %>" name="date">

        <label for="migraine-type-input">Type</label>
        <input type="text" name="type" value="<%= migraine.type %>" id="flight-number-input">

        <button type="submit">Update Migraine</button>
      </form>
    </main>
    <%- include("../partials/footer") %>